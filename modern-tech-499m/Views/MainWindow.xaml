        <converters:GameControllerToCommandParametersConverter x:Key="GameControllerToCommandParametersConverter"/>
    </Window.Resources>
    <i:Interaction.Behaviors>
        <behaviours:OpenCloseWindowBehavior WindowType="local:UsersDatabaseView" Open="{Binding UsersDatabaseViewOpen, Mode=TwoWay}"></behaviours:OpenCloseWindowBehavior>
