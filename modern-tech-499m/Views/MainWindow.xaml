        <Button Grid.Column="3" Content="User vs user" Command="{Binding StartNewGameCommand}" CommandParameter="UserVsUser"></Button>
        <Button Grid.Column="4" Content="User vs AI" Command="{Binding StartNewGameCommand}" CommandParameter="UserVsAI"></Button>
        <Button Grid.Column="5" Content="AI vs user" Command="{Binding StartNewGameCommand}" CommandParameter="AIVsUser"></Button>
        <Button Grid.Column="6" Content="AI vs AI" Command="{Binding StartNewGameCommand}" CommandParameter="AIVsAI"></Button>

        <Button Grid.Column="4" Grid.Row="1" Margin="10" Command="{Binding UndoRedoMoveCommand}" CommandParameter="True">Undo move</Button>
        <Button Grid.Column="5" Grid.Row="1" Margin="10" Command="{Binding UndoRedoMoveCommand}" CommandParameter="False">Redo move</Button>

